input-background-color = #ffffff;
input-placeholder-color = gray;
input-value-color = input-placeholder-color;
input-border-radius = 2px;

.awesome-search-form {
  &__wrap {
    display: flex;
    padding: 0;
    margin: 0
    max-width: 100%
  }

  &__column {
    flex: 20%;
    display: flex;

    &:first-child {
      flex: 80%;
    }
  }

  &-footer {
    &__col {
      width: 100%
    }

    &__col:nth-child(odd) {
      @media only screen and (min-width: 767px) {
        padding: 0;
        //display: none;
      }
    }
  }

  &-footer {
    &__col {
      &:nth-child(odd) {
        @media only screen and (min-width: 767px) {
          //display: none
        }
      }

      &:nth-child(even) {
        @media only screen and (min-width: 767px) {
          padding-top: 0;
        }
      }
    }
  }
}

.awesome-search-route {
  &__row {
    &:nth-child(2) {
      flex: 1;
    }
    padding-top: 20px;
  }


  &__col {
    &-date {
      &:first-child, &:last-child {
      }
    }
  }
}

.awesome-simple-route {
  border = 5px solid gray

  &__row {
    &:nth-child(1) {
      flex: 40%
    }

    &:nth-child(2) {
      flex: 20%
    }
    padding-top: 0;
  }

  &__col {
    &-date {
      &:first-child, &:last-child {
        width: 50%
        padding: 0;
      }
    }

    &-city {
      flex: 1;
      height: 45px;
    }
  }
}

.passenger {
  &-calc {
    &-drop {
      min-width: 250px;
      max-width: 400px;
      transform: translate(-100%, 0);
      left: 100%;
    }

    &-field {
      background: input-background-color;

      &__count {
        color: input-placeholder-color;
      }
    }
  }
}

.awesome-city-picker-field {
  @media only screen and (min-width: 767px) {
  }
}


.awesome-date-picker {
  &__pseudo-input {
    background: input-background-color;
  }

  &__locker {
    background: input-background-color;

    &:hover {
      background: input-background-color;
    }
  }
}
