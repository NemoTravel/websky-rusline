.orderSearchForm {
  &.rsln-searchForm {
    width: 100%;
    background: rgba(0, 0, 0, .6) !important;
    border-radius: 2px;
    padding: 10px;

    .item {
      &.item_peoples {
        padding-top: 15px;
        padding-right: 10px;
        width: 13%;

        .col {
          padding: 0;
          width: 100%;
        }

        .item__i {
          margin-left: 0;
          margin-right: 0;
        }

        pass-picker:nth-child(odd) {
          .col {
            padding-right: 0;
          }
        }

        pass-picker:nth-child(even) {
          .col {
            padding-left: 0;
          }
        }

        .textInp {
          padding-right: 25px;
        }
      }

      &.item_transfer {
        width: 48%;
        padding-right: 10px;

        .item__i {
          white-space: nowrap;
        }

        .col {
          width: 49%;
          display: inline-block;
          float: none;
        }

        city-picker {
          &:first-child {
            .col {
              margin-right: 10px;
            }
          }

          .arrowDown {
            display: none;
          }

          .iata {
            margin-top: 2px;

            @media (max-width: 767px) {
              right: 35px;
            }
          }

          .inpTo {
            .inp__i {
              & > .iata {
                right: 10px;
              }
            }

            .textInp {
              padding-right: 45px;
            }

            @media (max-width: 767px) {
              margin-bottom: 0;
              margin-top: 0;
            }
          }

          .inpFrom {
            .textInp {
              padding-right: 80px;
            }
          }
        }
      }

      &.item_date {
        width: 30.5%;
        padding-right: 10px;

        .col {
          &:first-child {
            padding-right: 0;
          }
        }

        .calendarInp {
          position: relative;
          padding: 0 36px 0 10px;

          & + .calendarIcon:after {
            content: '';
            background: #fff url("data:image/png;base64,") center center no-repeat;
            position: absolute;
            width: 28px;
            height: 24px;
            top: 50%;
            margin-top: -12px;
            right: 5px;
            opacity: 1;
            text-indent: -1000px;
            overflow: hidden;
            z-index: 3;
          }
        }

        .calendarIcon {
          position: static;
          background: 0 0;
        }
      }

      &.item_btn {
        width: 10%;

        .btn_formSearch {
          position: relative;
          width: 100%;
          line-height: 43px;
          height: 45px;
          font-weight: 300;
          font-size: 18px;
          padding: 0 15px;
          border-radius: 4px;

          @media (max-width: 1000px) {
            margin: 0;
          }
        }
      }
    }

    .item__i {
      position: relative;
      margin-left: 0;
      margin-right: 0;
    }

    .closeForm {
      display: none;
    }

    .compactShow {
      display: block;
    }
    .compactHide {
      display: none;
    }

    .compactDrop {
      position: absolute;
      background: #fff;
      z-index: 9;
      left: auto;
      right: 0;
      top: 100%;
      opacity: 0;
      visibility: hidden;
      transition: opacity, 450ms, ease;
      min-width: 275px;

      &.active {
        opacity: 1;
        visibility: visible;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);

      }
      .col {
        float: none;
        width: 100%;
      }

      .inpCol {
        border-left: 0;
        border-right: 0;
        border-bottom: 0;
        width: 35%;
        &:first-child {
          width: 65%;
        }
      }
    }

    .btnPlus {
      border: 1px solid #F2F2F2;
      border-radius: 50%;
      width: 18px;
      height: 18px;
      right: 10px;
      left: auto;

      i {
        font-size: 9px;
      }

    }

    .btnMinus {
      border: 1px solid #F2F2F2;
      border-radius: 50%;
      width: 18px;
      height: 18px;
      left: 10px;
      right: auto;

      //i {
      //	font-size: 1px;
      //}

    }

    .info {
      display: none;
    }

    .textInp {
      border-radius: 2px;
      height: 45px;
      line-height: 46px;
      font-size: 18px;
      font-weight: 300;
      border: 0;
      padding: 0 10px;
    }

    .rsln-searchForm {
      &__citySwap {
        height: 45px;
        width: 45px;
        background: 0 0;
        position: absolute;
        left: 50%;
        top: 0;
        cursor: pointer;
        z-index: 2;
        transform: translateX(-50%);
        margin-left: -28px;

        &:after {
          content: '';
          width: 17px;
          height: 7px;
          background-image: url("data:image/svg+xml;base64,");
          position: absolute;
          top: 21px;
          left: 12px;
          transform: rotate(180deg) translateX(1px);
          transition: transform .1s ease-in-out;
          margin-top: 3px;
          margin-left: 3px;
        }

        &:before {
          content: '';
          width: 17px;
          height: 7px;
          background-image: url("data:image/svg+xml;base64,");
          position: absolute;
          top: 12px;
          left: 12px;
          transform: translateX(1px);
          transition: transform .1s ease-in-out;
          margin-top: 3px;
          margin-left: 3px;
        }

        &:hover {
          &:before {
            transform: translateX(3px);
          }

          &:after {
            transform: rotate(180deg) translateX(3px);
          }
        }
      }

      &__arrowDown {
        margin-top: 1px;
        &:after {
          content: '';
          position: absolute;
          width: 12px;
          height: 9px;
          top: 50%;
          transform: translate(0, -50%);
          right: 0;
          transition: all .2s;
          background: url("data:image/svg+xml;base64,");
          background-repeat: no-repeat;
        }
      }
    }

    .compactDropShow.open {
      .arrowDown {
        &:after {
          transform: translate(0, -50%) rotate(180deg);
        }
      }
    }

    .pika-single {
      left: 50% !important;
      transform: translateX(-50%);
    }
  }

  .formBody__i {
    padding-bottom: 0;
  }

  &.orderSearchForm_change {
    .formBody__i {
      .steps {
        padding-right: 0;

        @media (max-width: 767px) {
          padding: 0;
        }
      }
    }
  }

  .steps__i {
    display: table;
  }

  .steps {
    &.active {
      .item {
        display: table-cell;
        padding-top: 0 !important;
        padding-bottom: 0 !important;
        vertical-align: top;
      }
    }
  }

  @media only screen and (max-width: 767px) {
    .steps__i {
      display: block;
    }

    .steps {
      &.active {
        .item {
          display: block;
          width: 100%;
          padding-right: 0;
          padding-bottom: 10px !important;
        }
      }
    }

    &.rsln-searchForm {
      border-radius: 0;

      .item {

        .item__i {
          display: flex;
        }

        &.item_transfer {
          city-picker {
            width: 100%;

            &:first-child {
              margin-right: 10px;
            }
          }

          .col {
            width: 100%;
          }
        }

        &.item_date {
          margin-top: 0;

          .col {
            padding-left: 0;

            &:first-child {
              margin-right: 10px;
            }
          }
        }

        &.item_peoples {
          width: 50%;
          display: inline-block;
          padding-right: 5px;
          padding-bottom: 0 !important;

          .compactShow {
            width: 100%;
          }

          .compactDrop {
            left: 0;
            right: auto;
          }
        }

        &.item_btn {
          width: 50%;
          display: inline-block;
          padding-left: 5px;
          padding-bottom: 0 !important;
        }
      }
    }
  }

  @media only screen and (max-width: 480px) {
    &.rsln-searchForm {
      .item {
        &.item_transfer {
          .item__i {
            display: block;
            white-space: normal;
          }

          city-picker {
            &:first-child {
              margin-right: 0;
            }

            .inpFrom {
              margin-bottom: 10px;
            }
          }
        }
      }

      .rsln-searchForm__citySwap {
        left: auto;
        right: 0;
        transform: rotate(90deg);
      }
    }
  }
}

