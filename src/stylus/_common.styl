.rsln {
  //background: url(https://tickets.rusline.aero/static/cms/sites/470/images/banner_result_summer.jpg) center center no-repeat;
  //background-size: cover;
  //background-attachment: fixed;

  &-bg {
    position: fixed;
    width: 100%;
    height: 100%;
    background: url(https://tickets.rusline.aero/static/cms/sites/470/images/banner_result_autumn.jpg) center center no-repeat;
    background-size: cover;
    background-attachment: fixed;
    z-index: -1;
    top: 0;
    left: 0;

    @media (max-width: 570px) {
      background: #63636c url(https://tickets.rusline.aero/static/cms/sites/470/images/banner_results_mobile_summer.jpg) center center no-repeat;
      background-size: cover;
      background-attachment: fixed;
    }
  }

  &-wrap {
    max-width: 1400px;

    @media (max-width: 750px) {
      padding: 0 !important;
    }

    .infoMessage.infoMessage_error {
      margin-top: 20px;
    }
  }

  &-way {
    color: #fff;
    padding: 25px 0;
    text-align: center;
    line-height: 20px;
    font-size: 24px;
    position: relative;

    @media (max-width: 750px) {
      padding: 7px 0;
    }

    &__header {
      font-weight: normal;
      font-size: 1em;

      &__caption {
        text-transform: capitalize;
        display: inline-block;
        margin-right: 7px;
      }

      @media (max-width: 750px) {
        font-weight: 700;
        font-size: 16px;

        &__date {
          display: none;
        }
      }
    }
  }

  &-searchParams {
    &_change {
      cursor: pointer;
    }
  }
}

.tooltipster {
  &-wrap {
    position: relative;
  }

  &-wrap:hover &-content {
    opacity: 1;
    visibility: visible;
  }

  &-content {
    position: absolute;
    display: block;
    bottom: 100%;
    background: #fff;
    color: #000;
    max-width: 240px;
    min-width: 200px;
    z-index: 10;
    opacity: 0;
    visibility: hidden;
    transform: translate(-50%, 0);
    left: 50%;
    margin-bottom: 10px;
    border-radius: 3px;
    box-shadow: 0 1px 3px rgba(0, 0, 0, .25);
    transition-duration: 450ms;
    transition-property: opacity, transform;
    transition-timing-function: ease;
  }

  &-text {
    font-size: 12px;
    line-height: 15px;
    padding: 5px 15px;
    overflow: hidden;
    display: block;
    width: 100%;
  }
}

