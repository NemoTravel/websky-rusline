offsetTop = 35px;

.rsln-flightTable {
  margin-top: offsetTop + 15px;
  +for_(mobile) {
    margin-top: 80px;
  }
}

.rsln-flights-sorting {
  display: flex;
  justify-content: center;
  z-index: 1;
  position: absolute;
  top: -(offsetTop);
  width: 100%;
  height: offsetTop;
  +for_(mobile) {
    top: -50px;
  }

  &__sort-by {
    width: 250px;
    .selectize-input {
      height: 35px;
      border: none !important;
      outline: 0 none;
      outline-offset: 0;
      background: #ebebeb linear-gradient(to bottom, rgba(250, 250, 250, 0.75), rgba(240, 240, 240, 0.75));
      text-overflow: ellipsis;
      border-radius: 4px 4px 0 0;
      +for_(mobile) {
        border-radius: 4px;
      }
      &:after {
        top: 16px !important;
      }
      &.focus {
        outline: 0 none;
        outline-offset: 0;
        border-color: #e3e3e3 !important;
        background: #ebebeb linear-gradient(to top, rgba(250, 250, 250, .75), rgba(240, 240, 240, .75));
      }
      .ui-select-match {
        outline: 0 none;
        outline-offset: 0;
        user-select: none;
        white-space: nowrap;
      }
      .ui-select-placeholder {
        user-select: none;
        &.text-muted {
          user-select: none;
        }
      }
    }

    .selectize-control > .selectize-dropdown {
      +for_(tablet mobile) {
        left: 0;
        transform: translate(0%, 0);
        width: 100%;
      }
    }

    .selectize-control.single {
      .selectize-input {
        &.focus {
          &:after {
            transform: rotate(180deg) translateY(30%) !important;
          }
        }
        &:after {
          border-color: transparent;
          background: chevron-bottom center no-repeat;
          width: 16px;
          height: 16px;
          transition: transform .15s ease-in-out;
          //background-size: contain
        }
      }
    }
  }

  &__only-direct-flights {
    display: flex;
    align-items: center;
    margin-left: 20px;
  }

  &__only-direct-label {
    background: #ebebeb linear-gradient(to bottom, rgba(250, 250, 250, .75), rgba(240, 240, 240, .75));
    border-radius: 4px 4px 0 0;
    padding: 8px 8px;
    white-space: nowrap;
    +for_(mobile) {
      border-radius: 4px;
    }
  }

  &__custom-checkbox-wrp {
    user-select: none;
  }

  &__custom-checkbox {
    display: inline-block;
    width: 16px;
    height: 16px;
    position: relative;
    border-radius: 5px;
    top: 3px;
    background: #ebebeb checkbox-sprite center no-repeat;
    background-size: contain;

    &--active {
      background: #ff1724 checkbox-sprite center no-repeat;
      background-size: contain;
    }
  }
}


